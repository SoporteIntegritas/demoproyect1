<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="product_template_libreria_form_view">
        <field name="name">product.template.descripcion1</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']//group[@name='description']" position="after">
                <group name="description1" string="Descripcion eCommerce">
                <field name="description_sale1"  nolabel="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>